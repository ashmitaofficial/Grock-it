<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false"
    android:layout_marginHorizontal="10dp"
    android:scrollbars="none"
    tools:context=".product.ProductdetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <include
            android:id="@+id/offer_label_cl"
            layout="@layout/product_label_layout" />

        <TextView
            android:id="@+id/product_desc"
            style="@style/label_textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/product_qty"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@id/product_name"
            app:layout_constraintTop_toBottomOf="@id/product_name" />

        <LinearLayout
            android:id="@+id/count_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <include
                layout="@layout/product_qty_container_layout" />


            <TextView
                android:id="@+id/price"
                style="@style/product_name_label_textStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:padding="5dp"
                android:text="@string/product_price" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E2E2E2" />

        <TextView
            style="@style/label_textStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/expand_icon"
            android:padding="10dp"
            android:text="@string/product_detail_label"
            android:textColor="#181725"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/product_details"
            android:textColor="#7C7C7C"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E2E2E2" />


        <include
            layout="@layout/product_nutrition_layout" />

        <TextView
            android:id="@+id/nutrition_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="20g protein, 2g fats, molecular acid rich in phosphate"
            android:textColor="#7C7C7C"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#E2E2E2" />


        <include
            layout="@layout/product_review_layout" />


<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal">-->
<!--        </LinearLayout>-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/AddBasket_btn"
            style="@style/button_style_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="35dp"
            android:background="@drawable/rounded_button_background"
            android:padding="18dp"
            android:text="@string/add_basket_btn"
            android:textAllCaps="false" />
    </LinearLayout>

</ScrollView>