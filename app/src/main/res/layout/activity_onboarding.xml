<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_background"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".onboarding.OnboardingActivity">


    <ImageView
        android:id="@+id/carrotImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:src="@drawable/carrot_icon" />

    <TextView
        android:id="@+id/welcomeTxt"
        style="@style/large_heading_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/gilroy_heading"
        android:text="@string/welcome_label"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/heading"
        style="@style/large_heading_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/gilroy_heading"
        android:text="@string/welcome_label2"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/heading3"
        style="@style/small_heading_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:text="Get your groceries in as fast as one hour"
        android:textColor="@android:color/darker_gray"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getStartedBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Started"
        style="@style/button_style_app"
        android:padding="18dp"
        android:layout_marginHorizontal="22dp"
        android:background="@drawable/rounded_button_background"
        android:layout_marginBottom="70dp"
        />




</LinearLayout>