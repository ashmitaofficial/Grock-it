<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home.account.AccountFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/userpic"
        android:layout_width="62dp"
        android:layout_height="63dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/avator"
        app:strokeColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        app:strokeWidth="5dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/userpic"
        app:layout_constraintBottom_toBottomOf="@id/userpic"
        android:text="@string/username"
        app:layout_constraintStart_toEndOf="@id/userpic"
        android:padding="20dp"
        android:layout_marginBottom="25dp"
        style="@style/small_heading_textStyle"
        android:textSize="20sp"
       />

    <ImageButton
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_name_icon"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@id/username"
        app:layout_constraintBottom_toBottomOf="@id/username"
        app:layout_constraintStart_toEndOf="@id/username"
        />

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/userpic"
        app:layout_constraintBottom_toBottomOf="@id/username"
        android:text="@string/useremail"
        app:layout_constraintStart_toEndOf="@id/userpic"
        style="@style/label_grey_textStyle"
        android:textSize="15sp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@id/username"
        app:layout_constraintEnd_toEndOf="@id/username"
        />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userpic"
        android:layout_marginTop="20dp"/>


    <ImageButton
        android:id="@+id/order_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/order_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <TextView
        android:id="@+id/order_txt"
        style="@style/body_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="16sp"
        android:text="@string/order_label"
        app:layout_constraintStart_toEndOf="@id/order_icon"
        app:layout_constraintTop_toBottomOf="@id/line" />


    <ImageButton
        android:id="@+id/payment_method_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="18dp"
        android:src="@drawable/right_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_icon"
        />


    <ImageButton
        android:id="@+id/detail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/detail_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/line2" />

    <TextView
        android:id="@+id/detail_txt"
        style="@style/body_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="16sp"
        android:text="@string/my_detail_label"
        app:layout_constraintStart_toEndOf="@id/detail_icon"
        app:layout_constraintTop_toBottomOf="@id/line2" />


    <ImageButton
        android:id="@+id/detail_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="18dp"
        android:src="@drawable/right_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2" />

    <View
        android:id="@+id/line3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_txt"
        />


    <ImageButton
        android:id="@+id/delivery_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/delivery_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/line3" />

    <TextView
        android:id="@+id/deliver_txt"
        style="@style/body_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="16sp"
        android:text="@string/deliver_label"
        app:layout_constraintStart_toEndOf="@id/delivery_icon"
        app:layout_constraintTop_toBottomOf="@id/line3" />


    <ImageButton
        android:id="@+id/delivery_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="18dp"
        android:src="@drawable/right_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line3" />

    <View
        android:id="@+id/line4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliver_txt"
        />


    <ImageButton
        android:id="@+id/payment_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/payment_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/line4" />

    <TextView
        android:id="@+id/payment_txt"
        style="@style/body_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="16sp"
        android:text="@string/payment_method_label"
        app:layout_constraintStart_toEndOf="@id/payment_icon"
        app:layout_constraintTop_toBottomOf="@id/line4" />


    <ImageButton
        android:id="@+id/payment_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="18dp"
        android:src="@drawable/right_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line4" />


    <View
        android:id="@+id/line5"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_txt"
        />


    <ImageButton
        android:id="@+id/promo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/promo_code_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/line5" />

    <TextView
        android:id="@+id/promo_txt"
        style="@style/body_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="16sp"
        android:text="@string/promo_label"
        app:layout_constraintStart_toEndOf="@id/promo_icon"
        app:layout_constraintTop_toBottomOf="@id/line5" />

    <ImageButton
        android:id="@+id/promo_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="18dp"
        android:src="@drawable/right_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line5" />



    <View
        android:id="@+id/line6"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promo_txt"
        />


    <ImageButton
        android:id="@+id/notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/notification_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/line6" />

    <TextView
        android:id="@+id/notification_txt"
        style="@style/body_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="16sp"
        android:text="@string/notification_label"
        app:layout_constraintStart_toEndOf="@id/notification_icon"
        app:layout_constraintTop_toBottomOf="@id/line6" />

    <ImageButton
        android:id="@+id/notification_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="18dp"
        android:src="@drawable/right_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line6" />


    <View
        android:id="@+id/line7"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification_txt"
        />


    <ImageButton
        android:id="@+id/help_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/help_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/line7" />

    <TextView
        android:id="@+id/help_txt"
        style="@style/body_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="16sp"
        android:text="@string/help_label"
        app:layout_constraintStart_toEndOf="@id/help_icon"
        app:layout_constraintTop_toBottomOf="@id/line7" />

    <ImageButton
        android:id="@+id/help_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="18dp"
        android:src="@drawable/right_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line7" />

    <View
        android:id="@+id/line8"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/help_txt"
        />

    <ImageButton
        android:id="@+id/about_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:src="@drawable/about_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/line8" />

    <TextView
        android:id="@+id/about_txt"
        style="@style/body_textStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:textSize="16sp"
        android:text="@string/about_label"
        app:layout_constraintStart_toEndOf="@id/about_icon"
        app:layout_constraintTop_toBottomOf="@id/line8" />

    <ImageButton
        android:id="@+id/about_right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="18dp"
        android:src="@drawable/right_arrow_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line8" />

    <View
        android:id="@+id/line9"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#E2E2E2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_icon"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout_btn"
        style="@style/button_style_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_background"
        android:padding="18dp"
        android:text="@string/logout_btn"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#F2F3F2"
        android:textColor="@color/app_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAllCaps="false" />

</androidx.constraintlayout.widget.ConstraintLayout>