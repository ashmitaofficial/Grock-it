<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GroceryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowDisablePreview">true</item>

    </style>

    <style name="Theme.GroceryApp" parent="Base.Theme.GroceryApp" >
    </style>
    


    <style name="label_textStyle_small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">#7C7C7C</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="label_medium_textStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/gilroy_heading</item>
    </style>

    <style name="label_textStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">#7C7C7C</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_grey_textStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">#7C7C7C</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body_textStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/gilroy_heading</item>
    </style>

    <style name="large_heading_textStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">50sp</item>
        <item name="fontFamily">@font/gilroy_heading</item>
    </style>

    <style name="medium_heading_textStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/gilroy_heading</item>
    </style>

    <style name="small_heading_textStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/gilroy_heading</item>
    </style>

    <style name="button_style_app" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/gilroy_heading</item>
        <item name="android:backgroundTint">@color/app_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_style_light" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/gilroy_heading</item>
        <item name="android:backgroundTint">#5383EC</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="button_style_dark" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/gilroy_heading</item>
        <item name="android:backgroundTint">#4A66AC</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="circular_floating_style">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:backgroundTint">@color/app_color</item>
        <item name="android:tint">@color/white</item>
        <item name="android:src">@drawable/forward_icon</item>
    </style>

    <style name="product_name_label_textStyle">
        <item name="android:tint">#181725</item>
        <item name="fontFamily">@font/gilroy_heading</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="category_label_textStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/gilroy_regular</item>
        <item name="android:textColor">#3E423F</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bottom_nav_style" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextAppearanceActive">@color/app_color</item>
        <item name="itemTextAppearanceInactive">@color/black</item>
        <item name="itemActiveIndicatorStyle">@color/app_color</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/holo_orange_light</item>
    </style>

</resources>